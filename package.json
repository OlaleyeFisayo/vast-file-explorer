{
  "name": "@vast/file-explorer",
  "type": "module",
  "version": "0.0.0",
  "description": "Core file system bridge for VAST. Provides secure, development-time access to project files and directories, enabling VAST's visual builder to read and write components directly to your local Vue project.",
  "author": "Festus-Olaleye Oluwafisayomi Oluwaseunfunmi",
  "license": "MIT",
  "homepage": "https://github.com/OlaleyeFisayo/vast-file-explorer#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OlaleyeFisayo/vast-file-explorer.git"
  },
  "bugs": {
    "url": "https://github.com/OlaleyeFisayo/vast-file-explorer/issues"
  },
  "keywords": [
    "vast",
    "file-explorer",
    "backend",
    "chokidar",
    "vite",
    "file-system"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./vite": {
      "types": "./dist/vite/index.d.ts",
      "import": "./dist/vite/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "/dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsup",
    "postbuild": "npm pack && del ..\\\\vast-vue\\\\vast-file-explorer-*.tgz && move vast-file-explorer-*.tgz ../vast-vue",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prepare": "husky",
    "test": "vitest"
  },
  "peerDependencies": {
    "vite": "^7.3.1"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "express": "^5.2.1",
    "open-editor": "^6.0.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.1",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.2",
    "eslint": "^9.39.2",
    "eslint-plugin-format": "^1.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vite": "*",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*": "npm run lint:fix"
  }
}
